@model aplicacaoLoja.Models.CompraProduto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<br />
<br />
<h4>CompraProduto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="produtoID" class="control-label"></label>
                <select asp-for="produtoID" class="form-control" asp-items="ViewBag.produtoID"></select>
                <span asp-validation-for="produtoID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="qtde" class="control-label"></label>
                <input asp-for="qtde" class="form-control" />
                <span asp-validation-for="qtde" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary border-0 bg-success" style="width: 6rem" /> |
                <a asp-action="Index"><input value="Voltar" class="btn btn-primary bg-warning text-dark border-0 " style="width: 6rem" /></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
