@model IEnumerable<aplicacaoLoja.Models.CompraProduto>

@{
    ViewData["Title"] = "Lista Compra Produto";
}

<h1>Comprar Produtos</h1>

<br />
<div class="form-group">
    <a asp-action="Create"><input type="submit" value="Nova Compra" class="btn btn-primary bg-success border-0" /></a>
</div>

<br />
<br />

<form asp-action="Index" method="get" class="row g-3">
    <div class="form-actions no-color row g-3">
        <div class="col-md-5">
            <label>Buscar</label>
            <div class="input-group">
                <input type="text" name="busca" value="" class="form-control" placeholder="Nome...">
                <div class="input-group-append" id="button-addon4">
                    <input type="submit" value="Filtrar" class="btn btn-primary bg-warning text-dark border-0" />
                </div>
            </div>
        </div>
    </div>
</form>

<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qtde)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.produto.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qtde)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id"><input type="submit" value="Editar" class="btn btn-primary bg-warning text-dark border-0" /></a> |
                    <a asp-action="Details" asp-route-id="@item.id"><input type="submit" value="Detalhar" class="btn btn-primary border-0" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.id"><input type="submit" value="Excluir" class="btn btn-primary bg-danger border-0" /></a>
                </td>
        </tr>
}
    </tbody>
</table>
