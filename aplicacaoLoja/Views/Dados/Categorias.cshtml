@model IEnumerable<aplicacaoLoja.Models.Categoria>

@{
    ViewData["Title"] = "Gerador de Categorias";
}

<h1>Gerador de Categorias</h1>
<br />
<div class="form-group">
    <a asp-controller="Categorias" asp-action="Index"><input type="submit" value="Voltar" class="btn btn-primary bg-danger border-0" /></a>
</div>

<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
        </tr>
}
    </tbody>
</table>
